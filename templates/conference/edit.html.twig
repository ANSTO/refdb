{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/jquery.mask.min.js") }}"></script>
    <script>
    $(document).ready(function(){
    $(":input").inputmask();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="float-right btn-group">
        <button class="btn btn-danger btn-modal" type="button" data-href="{{ path('conference_delete', { 'id': conference.id }) }}"><i class="fas fa-trash"></i> Delete</button>
    </div>
    <h2>Edit Conference</h2>

    <br />
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <br />
    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Save Changes" />
    {{ form_end(edit_form) }}

    <br />
    <a href="{{ path('conference_index') }}" class="btn btn-default"><i class="fas fa-arrow-left"></i> Back to the list</a>
