<div class="modal-header">
    <h5 class="modal-title">What is the problem?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    {{ form_start(form) }}
    <strong>In reference: </strong><br />{{ feedback.reference|latin }}
    <br /><br />
    {{ form_widget(form) }}
    <br />
    <div class="row">
        <div class="col">
            <a href="javascript:void(0)" class="btn btn-default btn-block" data-dismiss="modal">Cancel</a>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary btn-block btn-raised">Submit</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
