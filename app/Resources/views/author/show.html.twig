{% extends 'base.html.twig' %}

{% block body %}
    <h2>Author</h2>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ author.name }}</td>
        </tr>
        </tbody>
    </table>

<br />
    <a href="{{ path('author_index') }}" class="btn btn-default">Back to the list</a>
